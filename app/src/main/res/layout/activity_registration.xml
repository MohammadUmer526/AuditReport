<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="800dp"
    tools:context=".Registration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:id="@+id/liner_layout"
        android:orientation="vertical"
        tools:ignore="UselessParent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="0dp"
            android:background="#f26224">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:src="@drawable/systems"
                tools:ignore="ContentDescription" />

        </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/registration"
        android:layout_gravity="center"
        android:textColor="#333333"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/black_border_roundedcurve"
        >


        <EditText
            android:id="@+id/f_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"
            android:background="@null"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:paddingLeft="48dp"
            android:paddingTop="5dp"
            android:paddingBottom="15dp"
            android:textColor="#555555"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="12sp"
            tools:ignore="Autofill,HardcodedText,RtlCompat,RtlHardcoded,RtlSymmetry,UnusedAttribute" />

        <ImageView
            android:src="@drawable/ic_person_outline_black_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"
            tools:ignore="ContentDescription"
            android:layout_marginStart="14dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/black_border_roundedcurve"
        >


        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/l_name"
            android:hint="@string/last_name"
            android:layout_marginTop="0dp"
            android:background="@null"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:paddingLeft="48dp"
            android:paddingTop="5dp"
            android:paddingBottom="15dp"
            android:textColor="#555555"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="12sp"
            tools:ignore="Autofill,HardcodedText,RtlHardcoded,RtlSymmetry,UnusedAttribute"
           />

        <ImageView
            android:src="@drawable/ic_person_outline_black_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"
            tools:ignore="ContentDescription"
            android:layout_marginStart="14dp" />

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/black_border_roundedcurve"
            >


            <EditText
                android:id="@+id/email"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingLeft="48dp"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:textColor="#555555"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="12sp"
                android:background="@null"
                android:importantForAutofill="no"
                tools:ignore="RtlHardcoded,RtlSymmetry,UnusedAttribute" />

            <ImageView
                android:src="@drawable/ic_email_black_24dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="14dp"
                android:layout_centerVertical="true"
                tools:ignore="ContentDescription"
                android:layout_marginStart="14dp" />

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/black_border_roundedcurve"
        >


        <EditText
            android:id="@+id/designation"
            android:hint="@string/designation"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingLeft="48dp"
            android:paddingTop="5dp"
            android:paddingBottom="15dp"
            android:textColor="#555555"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="12sp"
            android:background="@null"
            android:importantForAutofill="no"
            tools:ignore="RtlHardcoded,RtlSymmetry,UnusedAttribute" />

        <ImageView
            android:src="@drawable/ic_work_black_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"
            tools:ignore="ContentDescription"
            android:layout_marginStart="14dp" />

    </RelativeLayout>

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="25dp"
       android:layout_marginRight="25dp"
       android:layout_marginTop="10dp"
       android:background="@drawable/black_border_roundedcurve"
       >


       <EditText
           android:id="@+id/password"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentStart="true"
           android:layout_alignParentTop="true"
           android:background="@null"
           android:hint="@string/password"
           android:importantForAutofill="no"
           android:inputType="textPassword"
           android:maxLines="1"
           android:maxLength="8"
           android:paddingLeft="48dp"
           android:paddingTop="5dp"
           android:paddingBottom="15dp"
           android:textColor="#555555"
           android:textCursorDrawable="@drawable/cursor_color"
           android:textSize="12sp"
           tools:ignore="RtlHardcoded,RtlSymmetry,UnusedAttribute"
           android:layout_alignParentLeft="true" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                android:src="@drawable/ic_lock_outline_black_24dp"
                tools:ignore="ContentDescription" />

            </RelativeLayout>
